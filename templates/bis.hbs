
local _, core = ...;
local LootAlert = core.LootAlert;

local function loadBis ()
    local spec0 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "0")
    local spec3 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "3")

    -- PreRaid
    {{#each items.[0]}}
    LootAlert:AddItem(spec0, "{{itemId}}", "{{slot}}", "{{#if isBis}}BIS{{else}}Alt{{/if}}") -- {{{name}}}
    {{/each}}

    -- Current Phase
    {{#each items.[1]}}
    LootAlert:AddItem(spec3, "{{itemId}}", "{{slot}}", "{{#if isBis}}BIS{{else}}Alt{{/if}}") -- {{{name}}}
    {{/each}}
end

table.insert(LootAlert.state.bisListLoadFunctions, loadBis);
